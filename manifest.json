{
  "manifest_version": 2,
  "name": "AGuide Viewer",
  "version": "0.1",
  "description": "Viewer for AmigaGuide documents",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file:///*"
      ],
      "js": [
        "scan.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "file:///*"
  ],
  "web_accessible_resources": [
      "aguide.html",
      "README.guide"
  ],
  "icons": {
    "16": "icon16x16.png",
    "32": "icon32x32.png",
    "48": "icon48x48.png",
    "64": "icon64x64.png",
    "96": "icon96x96.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16x16.png",
      "32": "icon32x32.png",
      "48": "icon48x48.png",
      "64": "icon64x64.png",
      "96": "icon96x96.png"
    }
  }
}
